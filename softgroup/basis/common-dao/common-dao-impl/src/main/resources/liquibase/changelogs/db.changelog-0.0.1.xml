<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="nikmlk">
        <createTable tableName="profile">
            <column name="id" type="varchar(255)" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="avatar_uri" type="varchar(255)" defaultValue="null"/>
            <column name="create_date_time" type="bigint(20)" defaultValue="null"/>
            <column name="name" type="varchar(255)" defaultValue="null"/>
            <column name="phone_number" type="varchar(255)" defaultValue="null"/>
            <column name="status" type="varchar(255)" defaultValue="null"/>
            <column name="update_date_time" type="bigint(20)" defaultValue="null"/>
        </createTable>
        <createTable tableName="device">
            <column name="id" type="varchar(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="device_id" type="varchar(255)" defaultValue="null"/>
            <column name="profile_id" type="varchar(255)">
                <constraints foreignKeyName="profile_id" referencedTableName="profile" referencedColumnNames="id" deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>